<%- include('partials/header', { title: 'PÃ¡gina Inicial' }) %>
    <%- include('partials/header2') %>
        <div class="alinhaMenu">
            <%- include('partials/menuItens') %>


                <main class="conteudo">

                    <div class="agendaCentraliza">
                        <div class="header">
                            <a class="mudarE" href="/agenda?month=<%= prevMonth %>&year=<%= prevYear %>">&lt;</a>
                            <h2 class="tituloMes">
                                <%= monthName.charAt(0).toUpperCase() + monthName.slice(1) %>
                                    <%= year %>
                            </h2>
                            <a class="mudarD" href="/agenda?month=<%= nextMonth %>&year=<%= nextYear %>">&gt;</a>
                        </div>

                        <div class="calendario">
                            <div class="weekdays">
                                <span>D</span><span>S</span><span>T</span><span>Q</span><span>Q</span><span>S</span><span>S</span>
                            </div>
                            <div class="days">
                                <% days.forEach(day=> { %>
                                    <% if (day===null) { %>
                                        <div></div>

                                        <% } else { %>
                                            <div class="day">
                                                <div class="day-content <%= isToday(day) ? 'today' : '' %>"
                                                    data-dia="<%= day %>">
                                                    <%= day %>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% }) %>

                            </div>
                        </div>
                    </div>
                </main>
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const dias = document.querySelectorAll(".day-content");

                dias.forEach(dia => {
                    dia.addEventListener("click", () => {
                        // Remove o "selected" de todos
                        dias.forEach(d => d.classList.remove("selected"));

                        // Adiciona "selected" no clicado
                        dia.classList.add("selected");
                    });
                });
            });
        </script>
        </body>

        </html>