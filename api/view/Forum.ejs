<%- include('partials/header', { title: 'PÃ¡gina Inicial' }) %>


    <div class="AlinhaForum">
        <aside class="menuLateral">
            <h3>Populares</h3>
            <hr />
            <ul>
                <% comunidades.forEach(com=> { %>
                    <li>
                        <%= com %>
                    </li>
                    <% }) %>
            </ul>
        </aside>


        <div id="formPostagem" class="modal" style="display: none;">
            <div class="modal-content">
                <span class="close" onclick="fecharFormulario()">&times;</span>
                <h2>Criar nova postagem</h2>
                <form id="formPostagemForm" enctype="multipart/form-data">
                    <input type="text" id="TITULO_POST_T05" name="TITULO_POST_T05" placeholder="TÃ­tulo da postagem" required />
                    <textarea id="CONTEUDO_POST_T05" name="CONTEUDO_POST_T05" placeholder="Escreva aqui seu conteÃºdo..."
                        required></textarea>
                    <input type="text" id="CATEGORIA_POST_T05" name="CATEGORIA_POST_T05" placeholder="Categoria (opcional)" />


                    <label for="arquivoPostagem" style="cursor: pointer;">
                        ðŸ“Ž Anexar arquivo
                        <input type="file" id="arquivoPostagem" name="arquivo" accept=".jpg,.jpeg,.png,.pdf,.doc,.docx"
                            style="display: none;" />
                    </label>
                    <button type="submit">Publicar</button>
                </form>
            </div>
        </div>




        <main class="PrincipalForum">
            <div class="barraPesquisa">
                <span class="search-icon"><img src="../imagens/procurar.png" alt=""></span>
                <input type="text" placeholder="Busque palavra-chave/ forum/ etc" />

            </div>

            <% if (posts && posts.length> 0) { %>
                <% posts.forEach(post=> { %>
                    <div class="post">
                        <div class="forum-info">
                            <div class="avatar"></div>
                            <span>
                                <%= post.forum || 'Geral' %>
                            </span>
                        </div>
                        <h2>
                            <%= post.titulo %>
                        </h2>
                        <br>
                        <div class="ConteudoPost">
                            <%= post.conteudo %>
                                <% if (post.ARQUIVO_POST_T05) { %>
                                    <div class="arquivo-post">
                                        <% if (post.arquivo) { %>
                                            <div class="arquivo-post">
                                                <a href="<%= post.arquivo %>" target="_blank">Ver anexo</a>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>

                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="nenhum-post">
                                <p>Nenhum post encontrado. Seja o primeiro a postar!</p>
                            </div>
                            <% } %>



                                <!-- BotÃ£o flutuante -->
                                <button class="botao-add" onclick="mostrarFormulario()">+</button>

                                <!-- FormulÃ¡rio oculto -->
                                <script>
                                    function mostrarFormulario() {
                                        document.getElementById("formPostagem").style.display = "block";
                                        document.getElementById("TITULO_POST_T05").value = "";
                                        document.getElementById("CONTEUDO_POST_T05").value = "";
                                        document.getElementById("CATEGORIA_POST_T05").value = "";
                                    }

                                    function fecharFormulario() {
                                        document.getElementById("formPostagem").style.display = "none";
                                    }

                                    document.getElementById("formPostagemForm").addEventListener("submit", async function (event) {
                                        event.preventDefault();

                                        const titulo = document.getElementById("TITULO_POST_T05").value;
                                        const conteudo = document.getElementById("CONTEUDO_POST_T05").value;
                                        const categoria = document.getElementById("CATEGORIA_POST_T05").value;

                                        const ID_USUARIO_T01 = <%= JSON.stringify(user.ID_USUARIO_T01) %>;

                                        try {
                                            const response = await fetch("/postagens", {
                                                method: "POST",
                                                headers: { "Content-Type": "application/json" },
                                                body: JSON.stringify({
                                                    ID_USUARIO_T01,
                                                    TITULO_POST_T05: titulo,
                                                    CONTEUDO_POST_T05: conteudo,
                                                    CATEGORIA_POST_T05: categoria
                                                })
                                            });

                                            const result = await response.json();

                                            if (response.ok) {
                                                alert("Postagem criada com sucesso!");
                                                fecharFormulario();
                                                window.location.reload();
                                            } else {
                                                alert("Erro ao criar postagem: " + result.erro);
                                            }
                                        } catch (error) {
                                            console.error("Erro:", error);
                                            alert("Erro ao enviar a requisiÃ§Ã£o.");
                                        }
                                    });

                                </script>
        </main>
    </div>


    </body>

    </html>