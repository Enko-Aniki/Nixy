<%- include('partials/header', { title: 'Página do Post' }) %>

    <div class="AlinhaForum">
        <!-- Menu lateral -->
        <aside class="menuLateral">
            <h3>Comunidades Populares</h3>
            <hr />
            <ul>
                <% if (comunidades && comunidades.length> 0) { %>
                    <% comunidades.forEach(com=> { %>
                        <li>
                            <a class="nomeComunidade" href="/comunidade/<%= com.ID_COMUNIDADE_T14 %>">
                                <div class="avatar_comunidade"></div><%= com.NOME_COMUNIDADE_T14 %>
                            </a>
                            <small>(<%= com.total_membros || 0 %> membros)</small>
                        </li>
                        <% }) %>
                            <% } else { %>
                                <li>Nenhuma comunidade encontrada</li>
                                <% } %>
            </ul>

            <!-- Botão para criar nova comunidade -->
            <button class="btn-criar-comunidade" onclick="mostrarFormularioComunidade()">
                + Nova Comunidade
            </button>
        </aside>

        <!-- Conteúdo principal -->
        <main class="conteudoPrincipal">

            <div class="barraPesquisa">
                <span class="search-icon"><img src="/imagens/procurar.png" alt="Buscar"></span>
                <input type="text" id="campoPesquisa" placeholder="Busque palavra-chave/ fórum/ etc" />
                <button>Buscar</button>
            </div>

            <h2 class="tituloPost">Título do Post</h2>
            <!-- Post completo -->
            <div class="postCompleto">


                <div class="conteudoPost">
                    <p>
                        conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo
                        conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo
                        conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo conteúdo
                    </p>
                </div>
            </div>
            <div class="acoesPost">
                <button><img class="avaliarBtn" src="/imagens/gostar.png" alt=""></button>
                <button><img class="avaliarBtn" src="/imagens/nao-gosto.png" alt=""></button>
            </div>


            <div class="comentarioBox">
                <div class="comentarioInputArea">
                    <textarea placeholder="Escreva um comentário..."></textarea>
                    <div class="comentarioAcoesEsquerda">
                        <button><i class="fas fa-image"></i></button>
                        <button><i class="fas fa-file"></i></button>
                        <button><i class="fas fa-font"></i></button>
                    </div>
                    <div class="comentarioAcoesDireita">
                        <button class="cancelarBtn">Cancel</button>
                        <button class="comentarBtn">Comment</button>
                    </div>
                </div>
            </div>

            <!-- Comentários -->
            <div class="secaoComentarios">
                <div class="comentario">
                    <div class="avatar pequeno"></div>
                    <div>
                        <strong>nome do usuário</strong>
                        <p>
                            conteúdo do comentário conteúdo do comentário conteúdo do comentário conteúdo do comentário
                            conteúdo do comentário conteúdo do comentário conteúdo do comentário
                        </p>
                    </div>
                </div>


                <div class="comentario">
                    <div class="avatar pequeno"></div>
                    <div>
                        <strong>outro usuário</strong>
                        <p>
                            outro comentário outro comentário outro comentário outro comentário
                            outro comentário outro comentário
                        </p>
                    </div>
                </div>
            </div>
        </main>
        <aside class="infoForum">
            <h4>Nome do fórum</h4>
            <p>Descrição do fórum</p>
            <hr />
            <div class="autorPost">
                <div class="avatar"></div>
                <span>Nome do usuário</span>
            </div>
        </aside>
    </div>